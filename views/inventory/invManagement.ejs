<%- messages() %>
    <% if (errors) { %>
        <ul class="failure-message">
            <% errors.array().filter(error=> error.msg !== "Invalid value").forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <ul class="no-bullet">
                <li>
                    <a href="/inv/add-classification">Add New Classification</a>
                </li>
                <li>
                    <a href="/inv/add-inventory">Add New Vehicle</a>
                </li>
            </ul>
            <h2>Manage Inventory</h2>
            <div class="drop-down">
                <p>Choose a classification to check the items within.</p>
                <%- classificationSelect %>
                    <table id="inventoryDisplay"></table>
            </div>


