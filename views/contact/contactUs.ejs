<h1 class="form-title"><%- title %></h1>
<%- messages() %>

        <% if (errors) { %>
                <ul class="failure-message">
                        <% errors.array().filter(error=> error.msg !== "Invalid value").forEach(error=> { %>
                                <li>
                                        <%= error.msg %>
                                </li>
                                <% }) %>
                </ul>
                <% } %>
                        <form class="form" id="contactForm" action="/contactUs" method="post">
                                <label>First name:<input type="text" name="user_firstname" required
                                                placeholder="Enter your first name"
                                                value="<%= locals.user_firstname %>"></label>
                                <small>Required</small>
                                <label>Last name:<input type="text" name="user_lastname" required
                                                placeholder="Enter your last name"
                                                value="<%= locals.user_lastname %>"></label>
                                <small>Required</small>
                                <label>Email address:<input type="email" name="user_email" required
                                                placeholder="Enter your email" value="<%= locals.user_email %>"></label>
                                <small>Required</small>
                                <label>Phone number:<input type="tel" name="user_phone" required
                                                placeholder="Enter your phone number" maxlength="10"
                                                value="<%= locals.user_phone %>"></label>
                                <small>Required. Only 10 digits</small>
                                <label>Subject:<input type="text" name="message_subject"
                                                value="<%= locals.message_subject %>" required
                                                placeholder="Enter the subject of the message" maxlength="30"></label>
                                <small>Required.Max 30 characters</small>
                                <label>Message:
                                        <textarea name="message_content" required maxlength="150" rows="4"
                                                placeholder="Write your message"><%= locals.message_content %></textarea>
                                </label>
                                <small>Required. Max 150 characters</small>
                                <input type="submit" value="SUBMIT">
                        </form>