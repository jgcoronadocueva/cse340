<h1>Welcome to CSE Motors!</h1>
<%- messages() %>
    <section id=hero-banner class="hero-container">
        <img class="hero-image" src="/images/vehicles/delorean.jpg" alt="delorean">
        <div class="hero-overlay">
            <h3>DMC Delorean</h3>
            <ul>
                <li>3 Cup holders</li>
                <li>Superman doors</li>
                <li>Fuzzy dice!</li>
            </ul>
            <button type="button" class="hero-button">Own Today</button>
        </div>
    </section>

    <section class="content-container">
        <div id="reviews">
            <h2>DMC Delorean Reviews</h2>
            <ul>
                <li>"So fast it's almost like traveling in time." (4/5)</li>
                <li>"Coolest ride on the road." (4/5)</li>
                <li>"I'm feeling McFly!" (5/5)</li>
                <li>"The most futuristic ride of our day." (4.5/5)</li>
                <li>"80's livin and I love it." (5/5)</li>
            </ul>
        </div>

        <div id="upgrades">
            <h2>Delorean Upgrades</h2>
            <div class="gallery-container">
                <div class="gallery-image">
                    <div><img src="/images/upgrades/flux-cap.png" alt="Flux capacitor"></div>
                    <p><a href="#">Flux Capacitor</a></p>
                </div>
                <div class="gallery-image">
                    <div><img src="/images/upgrades/flame.jpg" alt="Flame decal"></div>
                    <p><a href="#">Flame Decals</a></p>
                </div>
                <div class="gallery-image">
                    <div><img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper stickers"></div>
                    <p><a href="#">Bumper Stickers</a></p>
                </div>
                <div class="gallery-image">
                    <div><img src="/images/upgrades/hub-cap.jpg" alt="Hub caps"></div>
                    <p><a href="#">Hub Caps</a></p>
                </div>
            </div>
        </div>
    </section>